<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:id="@+id/show_reply_layout"
    android:background="@drawable/border"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:visibility="gone"
            android:id="@+id/show_reply"
            android:layout_gravity="center"
            android:src="@drawable/reply"
            android:layout_marginLeft="1dp"
            android:layout_weight=".07"
            android:layout_width="0dp"
            android:layout_height="28dp" />

        <TextView
            android:id="@+id/problem_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".27"
            android:gravity="center"
            android:text="الحالة"
            android:textColor="@color/applicationColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/problem_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight=".33"
            android:gravity="center"
            android:text="تاريخ المشكلة"
            android:textColor="@color/applicationColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/problem_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:gravity="center"
            android:text="رقم المشكلة"
            android:textColor="@color/applicationColor"
            android:textSize="13sp" />

    </LinearLayout>
</RelativeLayout>